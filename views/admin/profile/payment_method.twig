        });
        function fetch_profile() {
            var id = {{ loginId }};
            $.ajax({
                url: "/admin/fetch_profile",
                type: "POST",
                data: {
                    edit: 1,
                    id: id,
                },
                cache: false,
                success: function (dataResult) {
                    var dataResult = JSON.parse(dataResult);
                    console.log(dataResult);
                    $('#fullNameFirst').html(dataResult['users'][0].fname+' '+dataResult['users'][0].lname);
                    $('#fullName').html(dataResult['users'][0].fname+' '+dataResult['users'][0].lname);
                    $('#phone').html(dataResult['users'][0].phone);
                    $('#email').html(dataResult['users'][0].email);
                    $('#address').html(dataResult['users'][0].address);
                    $('#linkedin').html(dataResult['users'][0].linkedin);
                    $('#tweet').html(dataResult['users'][0].tweet);
                    $('#facebook').html(dataResult['users'][0].facebook);
                    $('#github').html(dataResult['users'][0].github);

                    $('#fname_model').val(dataResult['users'][0].fname);
                    $('#lname_model').val(dataResult['users'][0].lname);
                    $('#phone_model').val(dataResult['users'][0].phone);
                    $('#email_model').val(dataResult['users'][0].email);
                    $('#address_model').val(dataResult['users'][0].address);
                    $('#linkedin_model').val(dataResult['users'][0].linkedin);
                    $('#tweet_model').val(dataResult['users'][0].tweet);
                    $('#facebook_model').val(dataResult['users'][0].facebook);
                    $('#github_model').val(dataResult['users'][0].github);
                    var profileImage = dataResult['users'][0].profile_image;
                    var imageUrl = profileImage !== 'avatar.png'
                        ? "{{ env.APP_URL }}uploads/profile/" + profileImage
                        : "{{ env.APP_URL }}assets/dash/assets/media/svg/avatars/blank.svg";

                    // Set the background image dynamically
                    $('.image-input').css('background-image', 'url(' + imageUrl + ')');
                    $("#view_doc").html('');
                    if(dataResult['users'][0].profile_image != 'null' && dataResult['users'][0].profile_image != ''&& dataResult['users'][0].profile_image != null) {
                        $("#view_doc").append('<img src="{{ env.APP_URL }}uploads/profile/'+dataResult['users'][0].profile_image+'" >');
                        console.log(dataResult['users'][0].profile_image)
                    }else{
                        $("#view_doc").append('<img src="{{ env.APP_URL }}uploads/profile/avatar.png" >');
                        console.log("lora lele")
                    }
                    if(dataResult['appointment'] != ''){
                        $('#appointmentCount').html(dataResult['appointment']);
                    }else{
                        $('#appointmentCount').html(0);
                    }
                    if(dataResult['invoiceUnpaid'] != '') {
                        $('#invoiceUnpaidCount').html(dataResult['invoiceUnpaid']);
                    }else{
                        $('#invoiceUnpaidCount').html(0);
                    }
                    if(dataResult['invoicePaid'] != '') {
                        $('#invoicePaid').html(dataResult['invoicePaid']);
                    }else{
                        $('#invoicePaid').html(0);
                    }
                }
            });
        }
        function change_stripe_keys() {
            var public_key = $("#public_key").val();
            var secret_key = $("#secret_key").val();
            var confirm_password = $("#confirm_password").val();
            var csrf_token = $("input[name=csrf]").val();
            if ( public_key != '' && secret_key != '') {
                document.getElementById("btn-stripe-keys").innerHTML = "Loading";
                $("#btn-stripe-keys").attr("disabled");
                $.ajax
                ({
                    type: 'post',
                    url: '/admin/profile/change_stripe_keys',
                    data: {
                        change_stripe_keys: "change_stripe_keys",
                        public_key: public_key,
                        secret_key: secret_key,
                        csrf: csrf_token,
                    },
                    success: function (response) {
                        response = $.parseJSON(response);
                        if(response== 1){
                            $("#btn-stripe-keys").removeAttr("disabled");
                            toastr.success('Update Successfully.');
                            document.getElementById("btn-stripe-keys").innerHTML = "Update Keys";
                            fetch_profile()
                            $('#reloadpayment').load(window.location.href + ' #reloadpayment');
                        } else{
                            toastr.error('Somthing Went Wrong.');
                            $("#btn-stripe-keys").removeAttr("disabled");
                            document.getElementById("btn-stripe-keys").innerHTML = "Update Keys";
                        }
                    }
                });
            }else{
                document.getElementById("btn-stripe-keys").innerHTML = "Update Keys";
                document.getElementById("btn-stripe-keys").disabled = false;
                toastr.error("Required Fields Are Empty");
            }

            return false;
        }
    </script>

