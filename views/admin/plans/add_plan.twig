    .radioButton {
        float: left;
        margin: 0 5px 0 0;
        width: 100%;
        height: 100px;
        position: relative;
    }

    .radioButton label,
    .radioButton input {
        display: block;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
    }

    .radioButton input[type="checkbox"] {
        opacity: 0.011; /* Keep this to hide the radio button */
        z-index: 100;
    }

    .radioButton input[type="checkbox"]:checked + label > button {
        background: #ED141F; /* Change the background color when checked */
        color: white; /* Change text color to white */
        border-color: #ED141F;
    }

    .radioButton label {
        cursor: pointer;
        z-index: 90;
        line-height: 70px; /* Adjust line height to center text vertically */
    }

    .radioButton label > button {
        width: 100%; /* Make the button fill the label */
        height: 100%;
        border-radius: 4px;
        background-color: transparent; /* Initial background for unselected button */
        border: 1px solid #000; /* Border for the unselected button */
        color: #000; /* Text color for unselected button */
        font-size: 16px; /* Adjust font size as needed */
    }
    .btn-check:checked+.btn.btn-outline.btn-outline-dashed.btn-outline-default .svg-icon, .btn-check:checked+.btn.btn-outline.btn-outline-dashed.btn-outline-default i{
        color:#00a500 !important;

