    <script>
        document.querySelectorAll('.permission-checkbox').forEach(function(checkbox) {
            checkbox.addEventListener('change', function() {
                var svgContainer = document.getElementById('svg-' + this.id);

                if (this.checked) {
                    svgContainer.innerHTML = `
                    <svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="css-i6dzq1">
                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                        <path d="M7 11V7a5 5 0 0 1 9.9-1"></path>
                    </svg>
                `;
                } else {
                    svgContainer.innerHTML = `
                    <svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="css-i6dzq1">
                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                    </svg>
                `;
                }
            });
        });

        var input = document.querySelector('input[name=basic]');
        new Tagify(input)
        function add_plan() {
            document.getElementById('btn').disabled = true;
            var tags = input.value;
            // console.log(tags);
            var formData = new FormData(document.getElementById("AddPlansForm"));
             formData.set('basic', tags);
            $.ajax({
                url: "/admin/add_plan",
                type: "POST",
                data: formData,
                contentType: false,
                cache: false,
                processData: false,
                success: function (dataResult) {
                    console.log(dataResult);
                    if (dataResult == 1) {
                        document.getElementById('btn').disabled = false;
                        toastr.success('Add Successfully.');
                        document.getElementById("AddPlansForm").reset();
                        location.href = '/admin/plans'
                    } else if (dataResult == 2) {
                        toastr.error("Please Fill all the required Fields");
                        document.getElementById('btn').disabled = false;
                    }else if (dataResult == 3) {
                        toastr.error("Please Add Prices");
                        document.getElementById('btn').disabled = false;
                    } else {
                        toastr.error('Something Went Wrong.');
                        document.getElementById('btn').disabled = false;
                    }
                }
            });
        }

    </script>
