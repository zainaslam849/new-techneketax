    <div class="modal fade" id="editExampleModal" tabindex="-1" aria-labelledby="editExampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content bg-white">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Edit Plan</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="btn-close"></button>
                </div>
                <form  method="post" id="editUploadForm" enctype="multipart/form-data">
                    <input type="hidden"  id="id" name="id" >
                    <div class="modal-body">
                        <div class="row p-1">
                            <div class="col-sm-6 mb-2">
                                <label class="form-label">Name</label>
                                <input type="text" class="form-control" id="name" name="name" placeholder="Name">

                                <input type="hidden" name="csrf" value="{{ csrf }}">
                            </div>
                            <div class="col-sm-6 mb-2">
                                <label for="tags">Tags:</label>
                                <input name='basic' id="tagsData">
                            </div>
                            <div class="col-sm-12 mb-2">
                                <label class="form-label">Key Points</label>
                                <div id="key_points_inputs">

                                </div>
                            </div>
                            <div class="col-lg-12  mb-2">
                                <button class="btn btn-success " type="button" onclick="addKey_points();" style="float: right; background: #28a745 !important; border-color: #28a745 !important;">ADD <span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button>
                            </div>

                            <div id="addKey_points">

                            </div>
                            <div class="col-sm-12 mb-2">
                                <label class="form-label">Discount (%)</label>
                                <input type="number" class="form-control" id="percentage" min="0" name="percentage" placeholder="Discount (%)" value="0">
                            </div>
                            <div class="col-sm-6 mb-2">
                                <label class="form-label">Monthly Price</label>
                                <input type="number" class="form-control" id="monthly_price" min="0" name="monthly_price" placeholder="Monthly Price">
                            </div>
                            <div class="col-sm-6 mb-2">
                                <label class="form-label">Yearly Price</label>
                                <input type="number" class="form-control" id="yearly_price" min="0" name="yearly_price" placeholder="Yearly Price">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button"  class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" name="add_new" id="btn-profile" class="btn btn-primary" onclick="update_tool()">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tagify/4.27.0/tagify.min.js" integrity="sha512-RZnh1b5EBFnw6IaiqEhT0dQy+dCbeC6ZybZY/CkMlk2OW8Eyj20/t8Js3Ka1Ot/sQIVL20N81p7FRQvloTZgtw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script>


        $(document).ready(function () {
            var csrf_token = $("input[name=csrf]").val();
            var table = $('#table').dataTable({
                "language": {
                    processing: '<i class="fa fa-spinner fa-spin fa-3x fa-fw"></i><span class="sr-only">Loading...</span> '
                },
                "responsive": true,
                "bProcessing": true,
                "sAjaxSource": "/admin/api?page_name=view_plans&csrf="+csrf_token,
                "bPaginate": true,
                "sPaginationType": "full_numbers",
                "iDisplayLength": 10,
                "aoColumns": [
                    {mData: 'ids'},
                    {mData: 'name'},
                    {mData: 'monthlyPrice'},
                    {mData: 'yearlyPrice'},
                    {mData: 'statusView'},
                    {mData: 'action'},
                ]
            });
        });
        function userStatus(userID, status) {
            if(status == 0){
                var currStatus= "block";
            }else{
                var currStatus= "active";
            }
            var el = this;
            $(this).html('<i class="fa fa-circle-o-notch fa-spin"></i> loading...');
            var csrf_token = $("input[name=csrf]").val();
            $.ajax({
                url: '/admin/api',
                type: 'GET', data: {
                    id: userID,
                    status: currStatus,
                    page_name: "userStatusUpdate",
                    table_name:"plans",
                    status_table:"status",
                    csrf: csrf_token
                }, success: function (data) {
                    $(el).closest("tr").fadeOut();
                    if (data == 1) {
                        toastr.success('Status Updated.');
                        $(el).closest("tr").fadeOut();
                        $('#table').DataTable().ajax.reload(null, false);
                    } else {
                        toastr.error('Something went wrong.');

                    }
                }

            });
        }

        //Delete Data
        function deleteUser(deleteid) {
            var el = this;
            $(this).prop("disabled", true);
// add spinner to button
            $(this).html('<i class="fa fa-circle-o-notch fa-spin"></i> loading...');
            var csrf_token = $("input[name=csrf]").val();
            $.ajax({
                url: '/admin/api',
                type: 'GET', data: {
                    id: deleteid,
                    page_name: "delete",
                    table_name: "plans",
                    csrf: csrf_token
                }, success: function (data) {
                    $('#table').DataTable().ajax.reload(null, false);
                    $(el).closest("tr").fadeOut();
                    toastr.clear();
                    if (data == 1) {
                        toastr.success('Successfully deleted.');
                        $(el).closest("tr").fadeOut();
                        $('#table').DataTable().ajax.reload(null, false);
                    } else {
                        toastr.error('Something went wrong.');

                    }
                }
            });
        }
        $('body').on('click', '.edit', function () {
            var id = $(this).data('id');
            $('#editUploadForm').trigger("reset");
            $('#key_points_inputs').empty();
            $.ajax({
                url: "/admin/get_plan",
                type: "POST",
                data: {
                    edit: 1,
                    id: id,
                },
                cache: false,
                success: function (dataResult) {
                    var dataResult = JSON.parse(dataResult);
                    console.log(dataResult);

                    $('#name').val(dataResult[0].name);
                    $('#monthly_price').val(dataResult[0].monthly_price);
                    $('#yearly_price').val(dataResult[0].yearly_price);
                    $('input[name=id]').val(dataResult[0].id);
                    $('#tagsData').val(dataResult[0].tags);
                    $('#percentage').val(dataResult[0].percentage);

                    var keyPoints = dataResult[0].key_points.split(',');
                    keyPoints.forEach(keyPoint => {
                        addKeyPointInput(keyPoint.trim());
                    });

                }
            });
        });

        function addKeyPointInput(keyPoint) {
            const keyPointsInputs = document.getElementById('key_points_inputs');
            const keyPointInput = document.createElement('input');
            keyPointInput.type = 'text';
            keyPointInput.classList.add('form-control');
            keyPointInput.classList.add('mb-2');
            keyPointInput.classList.add('mt-2');
            keyPointInput.name = 'key_points[]';
            keyPointInput.value = keyPoint;
            keyPointInput.placeholder = 'Add Key Point';

            keyPointsInputs.appendChild(keyPointInput);
        }
        var input = document.querySelector('input[name=basic]');
        new Tagify(input)
        function update_tool() {
            var tags = input.value;
            var form_Data = new FormData(document.getElementById("editUploadForm"));
            form_Data.set('basic', tags);
            $.ajax({
                url: "/admin/plan_edit",
                type: "POST",
                data: form_Data,
                contentType: false,
                cache: false,
                processData: false,
                success: function (dataResult) {
                    console.log(dataResult);

                    $("#btn-profile").removeAttr("disabled");
                    if (dataResult == 1) {
                        $('#table').DataTable().ajax.reload(null, false);
                        $('#editExampleModal').modal('hide');
                        toastr.success('Plan Updated Successfully.');
                        document.getElementById("editUploadForm").reset();
                    } else if (dataResult == 2) {
                        toastr.error("Password doesn't Matched.");
                    } else if (dataResult == 3) {
                        toastr.error("Required fields are empty!");
                    } else {
                        toastr.error('Something Went Wrong.');
                    }
                },
                error: function () {
                    toastr.error('Error occurred while updating plan.');
                    $("#btn-profile").removeAttr("disabled");
                }
            });
        }
    </script>
    <script>


        var room = 1;
        function addKey_points() {
            room++;
            var objTo = document.getElementById('addKey_points')
            var divtest = document.createElement("div");
            divtest.setAttribute("class", "form-group row removeclass"+room);
            var rdiv = 'removeclass'+room;

            divtest.innerHTML = ' <div class="col-sm-10 mt-2"><input type="text" class="form-control" id="key_points" name="key_points[]" placeholder="Add Key Point"></div><div class="col-sm-2 "><button class="btn btn-danger mt-3 mb-2" type="button" onclick="remove_Key_points('+ room +');" style="float: right; background: #dc3545 !important; border-color: #dc3545 !important;">DELETE <span class="glyphicon glyphicon-minus" aria-hidden="true"></span></button></div>';
            objTo.appendChild(divtest)
        }
        // children remove fields
        function remove_Key_points(rid) {
            $('.removeclass'+rid).remove();
        }

        // The DOM element you wish to replace with Tagify
        var input = document.querySelector('input[name=basic]');

        // initialize Tagify on the above input node reference
        new Tagify(input)
    </script>
