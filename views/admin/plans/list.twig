        function update_tool() {
            document.getElementById('btn-edit-plan').disabled = true;
            document.getElementById("btn-edit-plan").innerHTML = "loading";
            var tags = input.value;
            var form_Data = new FormData(document.getElementById("editUploadForm"));
            form_Data.set('basic', tags);
            $.ajax({
                url: "/admin/plan_edit",
                type: "POST",
                data: form_Data,
                contentType: false,
                cache: false,
                processData: false,
                success: function (dataResult) {
                    document.getElementById('btn-edit-plan').disabled = false;
                    document.getElementById("btn-edit-plan").innerHTML = "Update";
                    console.log(dataResult);

                    $("#btn-profile").removeAttr("disabled");
                    if (dataResult == 1) {
                        $('#table').DataTable().ajax.reload(null, false);
                        $('#editExampleModal').modal('hide');
                        toastr.success('Plan Updated Successfully.');
                        document.getElementById("editUploadForm").reset();
                    } else if (dataResult == 2) {
                        toastr.error("Required fields are empty!");
                    } else if (dataResult == 3) {
                        toastr.error("Please Add Prices");
                    } else {
                        toastr.error('Something Went Wrong.');
                    }
                },
                error: function () {
                    toastr.error('Error occurred while updating plan.');
                    $("#btn-profile").removeAttr("disabled");
                }
            });
