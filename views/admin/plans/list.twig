                    if (data == 1) {
                        toastr.success('Successfully deleted.');
                        $(el).closest("tr").fadeOut();
                        $('#table').DataTable().ajax.reload(null, false);
                    } else {
                        toastr.error('Something went wrong.');

                    }
                }
            });
        }
        $('body').on('click', '.edit', function () {
            var id = $(this).data('id');
            $('#editUploadForm').trigger("reset");
            $('#key_points_inputs').empty();
            $.ajax({
                url: "/admin/get_plan",
                type: "POST",
                data: {
                    edit: 1,
                    id: id,
                },
                cache: false,
                success: function (dataResult) {
                    var dataResult = JSON.parse(dataResult);
                    console.log(dataResult);

                    $('#name').val(dataResult[0].name);
                    $('#monthly_price').val(dataResult[0].monthly_price);
                    $('#yearly_price').val(dataResult[0].yearly_price);
                    $('input[name=id]').val(dataResult[0].id);
                    $('#tagsData').val(dataResult[0].tags);
                    $('#percentage').val(dataResult[0].percentage);

                    var keyPoints = dataResult[0].key_points.split(',');
                    keyPoints.forEach(keyPoint => {
                        // Trim any extra spaces and select the corresponding checkbox
                        $('#editUploadForm input[name="key_points[]"][value="' + keyPoint.trim() + '"]').prop('checked', true);
                    });
                }
            });
        });


