    <script>
        function closeModal(id,) {
            $('#' + id).modal('hide');
        }
        function do_company_profile() {
            document.getElementById('btn').disabled = true;
            var formData = new FormData(document.getElementById("company_information"));

            $.ajax({
                url: "/user/firm-info",
                type: "POST",
                data: formData,
                contentType: false,
                cache: false,
                processData: false,
                success: function (dataResult) {
                    console.log(dataResult);
                    if (dataResult == 1) {
                        document.getElementById('btn').disabled = false;
                        toastr.success('Updated Successfully.');
                        document.getElementById("company_information").reset();
                        $('#kt_modal_add_user').modal('hide');
                        fetch_profile()
                    } else if (dataResult == 2) {
                        toastr.error("Please Fill all the required Fields");
                        document.getElementById('btn').disabled = false;
                    } else {
                        toastr.error('Something Went Wrong.');
                        document.getElementById('btn').disabled = false;
                    }
                }
            });
        }
        function do_bank_details() {
            document.getElementById('btn').disabled = true;
            var formData = new FormData(document.getElementById("bank_details"));

            $.ajax({
                url: "/user/bank/profile",
                type: "POST",
                data: formData,
                contentType: false,
                cache: false,
                processData: false,
                success: function (dataResult) {
                    console.log(dataResult);
                    if (dataResult == 1) {
                        document.getElementById('btn').disabled = false;
                        toastr.success('Updated Successfully.');
                        document.getElementById("bank_details").reset();
                        $('#kt_modal_bank_details').modal('hide');
                        fetch_profile()
                    } else if (dataResult == 2) {
                        toastr.error("Please Fill all the required Fields");
                        document.getElementById('btn').disabled = false;
                    } else {
                        toastr.error('Something Went Wrong.');
                        document.getElementById('btn').disabled = false;
                    }
                }
            });
        }

        $(document).ready(function () {
            fetch_profile()
        });
        function fetch_profile() {
            var id = {{ loginId }};
            $('#general_information').trigger("reset");
            $.ajax({
                url: "/user/fetch_profile",
                type: "POST",
                data: {
                    edit: 1,
                    id: id,
                },
                cache: false,
                success: function (dataResult) {
                    var dataResult = JSON.parse(dataResult);
                    console.log(dataResult);
                    $('#fullNameFirst').html(dataResult['users'][0].fname+' '+dataResult['users'][0].lname);
                    $('#contact_name').html(dataResult['users'][0].contact_name);
                    $('#company_name').html(dataResult['users'][0].company_name);
                    $('#representative_name').html(dataResult['users'][0].representative_name);
                    $('#owner_of_organization').html(dataResult['users'][0].owner_of_organization);
                    $('#type_of_organization').html(dataResult['users'][0].type_of_organization);
                    $('#account_number').html(dataResult['users'][0].account_number);
                    $('#bank_name').html(dataResult['users'][0].bank_name);
                    $('#swift_code').html(dataResult['users'][0].swift_code);
                    $('#bank_country').html(dataResult['users'][0].bank_country);

                    $('#contact_name_model').val(dataResult['users'][0].contact_name);
                    $('#company_name_model').val(dataResult['users'][0].company_name);
                    $('#representative_name_model').val(dataResult['users'][0].representative_name);
                    $('#owner_of_organization_model').val(dataResult['users'][0].owner_of_organization);
                    $('#type_of_organization_model').val(dataResult['users'][0].type_of_organization);
                    $('#account_number_model').val(dataResult['users'][0].account_number);
                    $('#bank_name_model').val(dataResult['users'][0].bank_name);
                    $('#swift_code_model').val(dataResult['users'][0].swift_code);
                    var profileImage = dataResult['users'][0].company_image;
                    var imageUrl = profileImage !== 'avatar.png'
                        ? "{{ env.APP_URL }}uploads/profile/" + profileImage
                        : "{{ env.APP_URL }}assets/dash/assets/media/svg/avatars/blank.svg";

                    // Set the background image dynamically
                    $('.image-input').css('background-image', 'url(' + imageUrl + ')');
                    $("#view_doc").html('');
                    if(dataResult['users'][0].company_image != 'null' && dataResult['users'][0].company_image != '' && dataResult['users'][0].company_image != null) {
                        $("#view_doc").append('<img src="{{ env.APP_URL }}uploads/profile/'+dataResult['users'][0].company_image+'" >');
                    }else{
                        $("#view_doc").append('<img src="{{ env.APP_URL }}uploads/profile/avatar.png" >');
                    }
                    if(dataResult['appointment'] != ''){
                        $('#appointmentCount').html(dataResult['appointment']);
                    }else{
                        $('#appointmentCount').html(0);
                    }
                    if(dataResult['invoiceUnpaid'] != '') {
                        $('#invoiceUnpaidCount').html(dataResult['invoiceUnpaid']);
                    }else{
                        $('#invoiceUnpaidCount').html(0);
                    }
                    if(dataResult['invoicePaid'] != '') {
                        $('#invoicePaid').html(dataResult['invoicePaid']);
                    }else{
                        $('#invoicePaid').html(0);
                    }
                    $("#bank_country_model").val(dataResult[0].bank_country).trigger();
                }
            });
        }
    </script>

{% endblock %}
