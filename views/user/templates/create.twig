{% extends 'user/master.twig' %}
{% block content %}
    <div id="content" class="main-content">
        <div class="layout-px-spacing">
            <div class="middle-content container-xxl p-0">
                <div class="account-settings-container layout-top-spacing">
                    <div class="content-body">
                        <div class="container-fluid">
                            <!-- row -->
                            <div class="row">
                                <div class="col-xl-12 col-lg-12">
                                    <div class="card card-bx m-b30">
                                        <div class="card-header">
                                            <h6 class="title">Create / Update Template</h6>
                                        </div>
                                        <form method="post" class="profile-form" id="templateForm" action="/user/template/create">
                                            <input type="hidden" name="csrf" value="{{ csrf }}">
                                            <input type="hidden" name="template_id" value="{{ template[0].id }}">
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-lg-12 mb-3">
                                                        <label class="form-label">Template Name</label>
                                                        <input type="text" class="form-control form-control-md" name="template_name" placeholder="Template Name" value="{{ template[0].name }}" required>
                                                    </div>
                                                    <div class="col-lg-12 mb-3">
                                                        <label class="form-label">Description</label>
                                                        <textarea class="form-control form-control-md" name="description" placeholder="Description">{{ template[0].description }}</textarea>
                                                    </div>
                                                    <div class="col-lg-12 mb-3">
                                                        <label class="form-label">Select Sections</label>
                                                        <div id="sections_container">
                                                            {% for section in sections %}
                                                                <div class="form-check">
                                                                    <input class="form-check-input" type="checkbox" name="sections[]" value="{{ section.id }}" id="section-{{ section.id }}" {% if section.id in template_sections %}checked{% endif %}>
                                                                    <label class="form-check-label" for="section-{{ section.id }}">
                                                                        {{ section.title }}
                                                                    </label>
                                                                </div>
                                                            {% endfor %}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="card-footer">
                                                <button type="submit" class="btn btn-primary">Save Template</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--  BEGIN FOOTER  -->
        <div class="footer-wrapper">
            <div class="footer-section f-section-1">
                <p class="">Copyright Â© <span class="dynamic-year">2024</span> <a target="_blank" href="https://zotecsoft.com/">ZotecSoft</a>, All rights reserved.</p>
            </div>
        </div>
        <!--  END FOOTER  -->
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        $('#templateForm').on('submit', function(event) {
            event.preventDefault();
            let formData = $(this).serializeArray();

            $.ajax({
                url: $(this).attr('action'),
                type: 'POST',
                data: formData,
                success: function(response) {
                    console.log(response);
                    if (response == 'Template saved successfully!') {
                        toastr.success('Template saved successfully.');
                    } else {
                        toastr.error('Something went wrong. Please try again.');
                    }
                },
                error: function() {
                    toastr.error('Something went wrong. Please try again.');
                }
            });
        });
    </script>
{% endblock %}
