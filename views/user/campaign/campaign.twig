{% extends 'user/master.twig' %}
{% block content %}
    <style>
        .select2-container{
            width: 100% !important;
        }
        .select2-container--default .select2-selection--multiple{
            padding: 0.75rem 1.25rem;
        }
        .select2-selection{
            color: #5e6278;
            background-color: #fff;
            background-clip: padding-box;
            border: 1px solid #e4e6ef;
            appearance: none;
            border-radius: .475rem;
            padding: .75rem 1rem;
        }
    </style>
    <link rel="stylesheet" href="https://unpkg.com/filepond/dist/filepond.css">
    <link rel="stylesheet" href="https://unpkg.com/filepond-plugin-image-preview/dist/filepond-plugin-image-preview.css">
    <!--  BEGIN CONTENT AREA  -->
    <div class="content d-flex flex-column flex-column-fluid" id="kt_content">
        <!--begin::Toolbar-->
        <div class="toolbar" id="kt_toolbar">
            <!--begin::Container-->
            <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
                <!--begin::Page title-->
                <div data-kt-swapper="true" data-kt-swapper-mode="prepend" data-kt-swapper-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}" class="page-title d-flex align-items-center flex-wrap me-3 mb-5 mb-lg-0">
                    <!--begin::Title-->
                    <h1 class="d-flex text-dark fw-bolder fs-3 align-items-center my-1">Campaign</h1>

                </div>

            </div>
            <!--end::Container-->
        </div>
        <!--end::Toolbar-->
        <!--begin::Post-->
        <div class="post d-flex flex-column-fluid" id="kt_post">
            <!--begin::Container-->
            <div id="kt_content_container" class="container-fluid">
                <div id="call-ringing"></div>
                <div class="row layout-top-spacing layout-spacing">
                    <div class="col-xl-12 col-lg-12 col-md-12" >
                        <div class="widget-content widget-content-area card">
                            <div class="card-header border-0 pt-6">
                                <!--begin::Card title-->

                                <div class="col-md-6 text-start">
                                    <!--begin::Search-->
                                    <div class="d-flex align-items-center position-relative my-1">
                                        <!--begin::Svg Icon | path: icons/duotune/general/gen021.svg-->
                                        <span class="svg-icon svg-icon-1 position-absolute ms-6">
													<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
														<rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="currentColor" />
														<path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="currentColor" />
													</svg>
												</span>
                                        <!--end::Svg Icon-->
                                        <input type="text" data-kt-customer-table-filter="search" id="search" class="form-control form-control-solid w-250px ps-15" placeholder="Search " />
                                    </div>
                                    <!--end::Search-->
                                </div>
                                <div class="col-md-6 text-end">
                                    <button type="button" class="btn btn-primary btn-sm" role="button" data-bs-toggle="modal" data-bs-target="#editExampleModal" >
                                        {#                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-external-link"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>#}
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"  viewBox="0 0 24 24" fill="currentColor"><path d="M13.9999 19.0001L5.00003 19.0002L5 17.0002L11.9999 17.0001L12 6.8283L8.05027 10.778L6.63606 9.36381L13 2.99985L19.364 9.36381L17.9498 10.778L14 6.82825L13.9999 19.0001Z"></path></svg>
                                        <span class="btn-text-inner">Add Campaign</span>
                                    </button>
                                </div>
                            </div>
                            <div class="table-responsive">
                                <table id="table"  class="table dt-table-hover" style="width:100%">
                                    <thead>
                                    <tr>
                                        <th> Id </th>
                                        <th>Name</th>
                                        <th>Date & Time</th>
                                        <th>Status</th>
                                        <th >Action</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="editExampleModal" tabindex="-1" aria-labelledby="editExampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered mw-650px">
            <div class="modal-content bg-white">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add Campaign</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="btn-close"></button>
                </div>
                <div class="modal-body scroll-y mx-5 mx-xl-5 my-7">
                    <form  method="post" id="CampaignForm" enctype="multipart/form-data">
                        <div class="d-flex flex-column scroll-y me-n7 pe-7" id="kt_modal_add_user_scroll"
                             data-kt-scroll="true" data-kt-scroll-activate="{default: false, lg: true}"
                             data-kt-scroll-max-height="auto" data-kt-scroll-dependencies="#kt_modal_add_user_header"
                             data-kt-scroll-wrappers="#kt_modal_add_user_scroll" data-kt-scroll-offset="300px"
                             style="max-height: 570px;">
                            <div class="fv-row mb-7 fv-plugins-icon-container">
                                <label class="form-label">Name</label>
                                <input type="text" class="form-control form-control-solid" id="name" name="name" >
                            </div>
                            <div class="fv-row mb-7 fv-plugins-icon-container" id="interviews_documents">
                                <div class="">
                                    <label class="form-label">Choose Timezone</label>
                                    <select class="js-example-basic-single form-select form-select-solid" aria-label="timezone" id="timezone" name="timezone" >
                                        <option selected disabled>Choose Timezone</option>
                                        {% for world_time_zonesDetail in world_time_zonesDetails %}
                                            <option value="{{ world_time_zonesDetail.id }}">{{ world_time_zonesDetail.time_zone }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="fv-row mb-7 fv-plugins-icon-container">
                                <label class="form-label">Start Date</label>
                                <input type="datetime-local" class="form-control form-control-solid" id="date" name="date" value="{{ CurrentDate }}">
                            </div>
                            <div class="fv-row mb-7 fv-plugins-icon-container" id="interviews_documents">
                                <div class="">
                                    <label class="form-label">Choose List</label>
                                    <select class="js-example-basic-single1 form-select form-select-solid" aria-label="list" id="list" name="list" >
                                        <option selected disabled>Choose List</option>
                                        {% for ListDetail in ListDetails %}
                                            <option value="{{ ListDetail.id }}">{{ ListDetail.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>

                            <div class="fv-row mb-7 fv-plugins-icon-container">
                                <label class="form-label">Subject</label>
                                <input type="text" class="form-control form-control-solid" id="subject" name="subject" placeholder="Subject">
                            </div>
                            <div class="fv-row mb-7 fv-plugins-icon-container">
                                <label class="form-label">Body</label>
                                <textarea class="form-control form-control-solid" id="body" name="body" placeholder="Body"></textarea>
                            </div>
                        </div>

                        <div class="modal-footer justify-content-center">
                            <button type="button"  class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" name="add_new" id="btn-profile" class="btn btn-primary" onclick="add_tool()">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/filepond/dist/filepond.js"></script>
    <script src="https://unpkg.com/filepond-plugin-file-validate-size/dist/filepond-plugin-file-validate-size.js"></script>
    <script src="https://unpkg.com/filepond-plugin-file-validate-type/dist/filepond-plugin-file-validate-type.js"></script>
    <script src="https://unpkg.com/filepond-plugin-image-preview/dist/filepond-plugin-image-preview.js"></script>
    <script>
        $(document).ready(function () {
            var csrf_token = $("input[name=csrf]").val();
            var table = $('#table').dataTable({
                "language": {
                    processing: '<i class="fa fa-spinner fa-spin fa-3x fa-fw"></i><span class="sr-only">Loading...</span> '
                },
                "responsive": true,
                "bProcessing": true,
                "sAjaxSource": "/user/api?page_name=view_campaign&csrf="+csrf_token,
                "bPaginate": true,
                "sPaginationType": "full_numbers",
                "iDisplayLength": 10,
                "aoColumns": [
                    {mData: 'ids'},
                    {mData: 'name'},
                    {mData: 'DateView'},
                    {mData: 'statusView'},
                    {mData: 'action'},
                ]
            });
            $('#search').on('keyup', function() {
                $('#table').DataTable().search(this.value).draw();
            });
        });

        $(document).ready(function() {
            $('.js-example-basic-single').select2({
                dropdownParent: $('#editExampleModal')
            });
            $('.js-example-basic-single1').select2({
                dropdownParent: $('#editExampleModal')
            });
        });
        //Delete Data
        function deleteUser(deleteid) {
            var el = this;
            $(this).prop("disabled", true);
// add spinner to button
            $(this).html('<i class="fa fa-circle-o-notch fa-spin"></i> loading...');
            var csrf_token = $("input[name=csrf]").val();
            $.ajax({
                url: '/user/api',
                type: 'GET', data: {
                    id: deleteid,
                    page_name: "delete",
                    table_name: "campaign",
                    csrf: csrf_token
                }, success: function (data) {
                    $('#table').DataTable().ajax.reload(null, false);
                    $(el).closest("tr").fadeOut();
                    toastr.clear();
                    if (data == 1) {
                        toastr.success('Successfully deleted.');
                        $(el).closest("tr").fadeOut();
                        $('#table').DataTable().ajax.reload(null, false);
                    } else {
                        toastr.error('Something went wrong.');

                    }
                }
            });
        }
        //Update  Data
        function add_tool() {
            var form_Data = new FormData(document.getElementById("CampaignForm"));

            $.ajax({
                url: "/user/campaign/start_campaign",
                type: "POST",
                data: form_Data,
                contentType: false,
                cache: false,
                processData: false,
                success: function (dataResult) {
                    console.log(dataResult);
                    $("#btn-profile").removeAttr("disabled");
                    if (dataResult == 1) {
                        $('#table').DataTable().ajax.reload(null, false);
                        $("#btn-profile").removeAttr("enabled");
                        $('#editExampleModal').modal('hide');
                        toastr.success('Added Successfully.');
                        document.getElementById("CampaignForm").reset();
                    } else if (dataResult == 2) {
                        toastr.error("Please Choose List");
                    } else if (dataResult == 3) {
                        toastr.error("Required fields are empty!");
                    } else if (dataResult == 4) {
                        toastr.error("Please Add Email in List");
                    } else {
                        toastr.error('Something Went Wrong.');
                    }

                }
            });
        }
        $(document).ready(function(){
            $(document).on('click', '.see-more', function(e){
                e.preventDefault();
                var fullComment = $(this).data('description');
                $('#fullComment').text(fullComment);
                $('#commentModal').modal('show');
            });
        });
        function userStatus(userID, status) {
            if(status == 0){
                var currStatus= "pause";
            }else{
                var currStatus= "start";
            }
            var el = this;
            $(this).html('<i class="fa fa-circle-o-notch fa-spin"></i> loading...');
            var csrf_token = $("input[name=csrf]").val();
            $.ajax({
                url: '/user/api',
                type: 'GET', data: {
                    id: userID,
                    status: currStatus,
                    page_name: "userStatusUpdate",
                    table_name:"campaign",
                    status_table:"status",
                    csrf: csrf_token
                }, success: function (data) {
                    if (data == 1) {
                        toastr.success('Status Updated.');
                        $('#table').DataTable().ajax.reload(null, false);
                    } else {
                        toastr.error('Something went wrong.');

                    }
                }

            });
        }
    </script>
{% endblock %}