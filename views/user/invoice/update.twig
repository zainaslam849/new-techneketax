{% extends 'user/master.twig' %}
{% block content %}
    <style>
        .select2-container{
            width: 100% !important;
        }
        .select2-container--default .select2-selection--multiple{
            padding: 0.75rem 1.25rem;
        }
        .form-control-solid{
            margin-bottom: .75rem !important;
        }
        .cke_notification{

            display: none !important;
        }
        .form-select{
              margin-bottom: .75rem !important;
          }
        li{
            list-style: none;
        }
    </style>

    <!--  BEGIN CONTENT AREA  -->
    <div class="content d-flex flex-column flex-column-fluid" id="kt_content">
        <!--begin::Toolbar-->
        <div class="toolbar" id="kt_toolbar">
            <!--begin::Container-->
            <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
                <!--begin::Page title-->
                <div data-kt-swapper="true" data-kt-swapper-mode="prepend" data-kt-swapper-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}" class="page-title d-flex align-items-center flex-wrap me-3 mb-5 mb-lg-0">
                    <!--begin::Title-->
                    <h1 class="d-flex text-dark fw-bolder fs-3 align-items-center my-1">Update Invoice</h1>

                </div>

            </div>
            <!--end::Container-->
        </div>
        <div class="post d-flex flex-column-fluid" id="kt_post">
            <!--begin::Container-->
            <div id="kt_content_container" class="container-fluid">
                <div id="call-ringing"></div>

                <div class="row invoice layout-top-spacing layout-spacing">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="doc-container">
                            <form method="post" id="invoiceForm"  enctype="multipart/form-data">
                                <input type="hidden" name="id" value="{{ invoiceInfo[0].id }}">
                                <div class="row">
                                    <div class="col-xl-9">
                                        <div class="invoice-content card p-12">
                                            <div class="invoice-detail-body">
                                                <div class="invoice-detail-title">
                                                    <div class="row">
                                                    <div class="col-md-6 text-start">
                                                        <div class="profile-image">
                                                            {% if whitelabel == "no" %}
                                                                <img src="{{ env.APP_URL }}uploads/settings/{{ logo }}" alt="avatar" class="img-fluid" style="    width: 200px;">
                                                            {% else %}
                                                            {% if userCompanyImage != "null" and userCompanyImage != "" %}
                                                                <img src="{{ env.APP_URL }}uploads/profile/{{ userCompanyImage }}" alt="avatar" class="img-fluid" style="    width: 200px;">
                                                            {% else %}
                                                                <img src="{{ env.APP_URL }}uploads/settings/{{ logo }}" alt="avatar" class="img-fluid" style="    width: 200px;">
                                                            {% endif %}
                                                            {% endif %}
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6 text-end">
                                                        <input type="text" class="form-control w-md-50 form-control-solid float-end" placeholder="Invoice Label" name="invoice_label" value="{{ invoiceInfo[0].invoice_number }}" readonly>
                                                    </div>
                                                    </div>

                                                </div>
                                                <div class="separator separator-dashed my-10"></div>
                                                <div class="invoice-detail-header">
                                                    <div class="row justify-content-between">
                                                        <div class="col-xl-5 invoice-address-company">
                                                            <h4>From:-</h4>
                                                            <div class="invoice-address-company-fields">
                                                                <div class="form-group row">
                                                                    <label for="company-name" class="col-sm-3 col-form-label col-form-label-sm">Name</label>
                                                                    <div class="col-sm-9">
                                                                        <input type="text" class="form-control form-control-solid" id="company-name" name="firm_name" placeholder="Business Name" value="{{ invoiceInfo[0].firm_name }}">
                                                                        <input type="hidden" name="firm_id" value="{{ invoiceInfo[0].firm_id }}">
                                                                    </div>
                                                                </div>
                                                                <div class="form-group row">
                                                                    <label for="company-email" class="col-sm-3 col-form-label col-form-label-sm">Email</label>
                                                                    <div class="col-sm-9">
                                                                        <input type="text" class="form-control form-control-solid" id="company-email" name="firm_email" placeholder="name@company.com" value="{{ invoiceInfo[0].firm_email }}">
                                                                    </div>
                                                                </div>
                                                                <div class="form-group row">
                                                                    <label for="firm_address" class="col-sm-3 col-form-label col-form-label-sm">Address</label>
                                                                    <div class="col-sm-9">
                                                                        <input type="text" class="form-control form-control-solid" id="firm_address" name="firm_address" placeholder="XYZ Street"  value="{{ invoiceInfo[0].firm_address }}">
                                                                    </div>
                                                                </div>
                                                                <div class="form-group row">
                                                                    <label for="company-phone" class="col-sm-3 col-form-label col-form-label-sm">Phone</label>
                                                                    <div class="col-sm-9">
                                                                        <input type="text" class="form-control form-control-solid" id="company-phone" name="firm_phone" placeholder="(123) 456 789" value="{{ invoiceInfo[0].firm_phone }}">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-xl-5 invoice-address-client">
                                                            <h4>Bill To:-</h4>
                                                            <div class="invoice-address-client-fields">
                                                                <div class="form-group row">
                                                                    <label for="client-name" class="col-sm-3 col-form-label col-form-label-sm">Name</label>
                                                                    <div class="col-sm-9">
                                                                        <select class="form-select form-select-solid" aria-label="Clients" id="client_id" name="client_id" onchange="handleClientChange(this)">
                                                                            <option value="">Choose Client</option>
                                                                            {% for client in clients %}
                                                                                <option value="{{ client.id }}" {% if invoiceInfo[0].client_id == client.id %} selected{% endif %}>{{ client.fname }} {{ client.lname }}</option>
                                                                            {% endfor %}
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                                <div class="form-group row">
                                                                    <label for="client-email" class="col-sm-3 col-form-label col-form-label-sm">Email</label>
                                                                    <div class="col-sm-9">
                                                                        <input type="text" class="form-control form-control-solid" id="client-email" name="client_email" placeholder="name@company.com" value="{{ invoiceInfo[0].client_email }}">
                                                                    </div>
                                                                </div>
                                                                <div class="form-group row">
                                                                    <label for="client-address" class="col-sm-3 col-form-label col-form-label-sm">Address</label>
                                                                    <div class="col-sm-9">
                                                                        <input type="text" class="form-control form-control-solid" id="client-address" name="client_address" placeholder="XYZ Street" value="{{ invoiceInfo[0].client_address }}">
                                                                    </div>
                                                                </div>
                                                                <div class="form-group row">
                                                                    <label for="client-phone" class="col-sm-3 col-form-label col-form-label-sm">Phone</label>
                                                                    <div class="col-sm-9">
                                                                        <input type="text" class="form-control form-control-solid" id="client-phone" name="client_phone" placeholder="(123) 456 789" value="{{ invoiceInfo[0].client_phone }}">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="invoice-detail-terms">
                                                    <div class="row justify-content-between">
                                                        <div class="col-md-3">
                                                            <div class="form-group mb-4">
                                                                <label for="number">Invoice Number</label>
                                                                <input type="text" class="form-control form-control-solid"  placeholder="Invoice Number" name="invoice_number" value="{{ invoiceInfo[0].invoice_number }}" readonly>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="form-group mb-4">
                                                                <label for="date">Invoice Date</label>
                                                                <input type="date" class="form-control form-control-solid" name="invoice_date" value="{{ invoiceInfo[0].invoice_date }}">
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="form-group mb-4">
                                                                <label for="due">Due Date</label>
                                                                <input type="date" class="form-control form-control-solid" name="due_date" value="{{ invoiceInfo[0].due_date }}">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="separator separator-dashed my-10"></div>
                                                <div class="invoice-detail-items">
                                                    <div class="table-responsive">
                                                        <table class="table item-table">
                                                            <thead>
                                                            <tr>
                                                                <th class="w-md-75px w-10"></th>
                                                                <th class="min-w-200px w-150px">Description</th>
                                                                <th class="min-w-150px w-150px">Rate</th>
                                                                <th class="min-w-100px w-100px">Qty</th>
                                                                <th class="min-w-100px w-150px text-end">Amount</th>
                                                                {#                                                            <th class="text-center">Tax</th>#}
                                                            </tr>
                                                            <tr aria-hidden="true" class="mt-3 d-block table-row-hidden"></tr>
                                                            </thead>
                                                            <tbody>
                                                            {% set item_des = ProductDetails.item_des ? ProductDetails.item_des|split(',') : [] %}
                                                            {% set additional_details = ProductDetails.additional_details ? ProductDetails.additional_details|split(',') : [] %}
                                                            {% set price = ProductDetails.price ? ProductDetails.price|split(',') : [] %}
                                                            {% set quantity = ProductDetails.quantity ? ProductDetails.quantity|split(',') : [] %}
                                                            {% set amount_item = ProductDetails.amount_item ? ProductDetails.amount_item|split(',') : [] %}
                                                            {% set hasData = item_des|filter(v => v != '')|length > 0 or price|filter(v => v != '')|length > 0 or quantity|filter(v => v != '')|length > 0 or amount_item|filter(v => v != '')|length > 0 %}

                                                            {% if hasData %}
                                                                {% for i in 0..item_des|length - 1 %}

                                                                    {% set SrNo = i + 1 %}
                                                                    <tr class="border-bottom border-bottom-dashed" data-kt-element="item">
                                                                        <td class="delete-item-row">
                                                                            <ul class="table-controls">
                                                                                <li><a href="javascript:void(0);" class="delete-item" data-toggle="tooltip" data-placement="top" title="Delete" data-original-title="Delete">
                                                                                      <span class="svg-icon svg-icon-3">
																			<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
																				<path d="M5 9C5 8.44772 5.44772 8 6 8H18C18.5523 8 19 8.44772 19 9V18C19 19.6569 17.6569 21 16 21H8C6.34315 21 5 19.6569 5 18V9Z" fill="currentColor"></path>
																				<path opacity="0.5" d="M5 5C5 4.44772 5.44772 4 6 4H18C18.5523 4 19 4.44772 19 5V5C19 5.55228 18.5523 6 18 6H6C5.44772 6 5 5.55228 5 5V5Z" fill="currentColor"></path>
																				<path opacity="0.5" d="M9 4C9 3.44772 9.44772 3 10 3H14C14.5523 3 15 3.44772 15 4V4H9V4Z" fill="currentColor"></path>
																			</svg>
																		</span>
                                                                                    </a></li>
                                                                            </ul>
                                                                        </td>
                                                                        <td class="pe-7">
                                                                            <input type="text" class="form-control form-control-solid" placeholder="Item Description" name="item_des[]" value="{{ item_des[i]|e }}">
                                                                            <textarea class="form-control form-control-solid" placeholder="Additional Details" name="additional_details[]">{{ additional_details[i]|e }}</textarea>
                                                                        </td>
                                                                        <td class="ps-0">
                                                                            <input type="text" class="form-control form-control-solid price" placeholder="Price" name="price[]" value="{{ price[i]|e }}">
                                                                        </td>
                                                                        <td class="text-right qty">
                                                                            <input type="text" class="form-control form-control-solid quantity" placeholder="Quantity" name="quantity[]" value="{{ quantity[i]|e }}">
                                                                        </td>
                                                                        <td class="pt-8 text-end text-nowrap">
                <span class="editable-amount">
                    <span class="currency">$</span>
                    <span class="amount">{{ amount_item[i]|e }}</span>
                </span>
                                                                        </td>
                                                                        <input type="hidden" name="amount_item[]" class="amount_item" value="{{ amount_item[i]|e }}">
                                                                    </tr>
                                                                {% endfor %}
                                                                {% else %}
                                                                    <tr class="border-bottom border-bottom-dashed" data-kt-element="item">
                                                                        <td class="delete-item-row">
                                                                            <ul class="table-controls">
                                                                                <li><a href="javascript:void(0);" class="delete-item" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete">
                                                                                       <span class="svg-icon svg-icon-3">
																			<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
																				<path d="M5 9C5 8.44772 5.44772 8 6 8H18C18.5523 8 19 8.44772 19 9V18C19 19.6569 17.6569 21 16 21H8C6.34315 21 5 19.6569 5 18V9Z" fill="currentColor"></path>
																				<path opacity="0.5" d="M5 5C5 4.44772 5.44772 4 6 4H18C18.5523 4 19 4.44772 19 5V5C19 5.55228 18.5523 6 18 6H6C5.44772 6 5 5.55228 5 5V5Z" fill="currentColor"></path>
																				<path opacity="0.5" d="M9 4C9 3.44772 9.44772 3 10 3H14C14.5523 3 15 3.44772 15 4V4H9V4Z" fill="currentColor"></path>
																			</svg>
																		</span>
                                                                                    </a></li>
                                                                            </ul>
                                                                        </td>
                                                                        <td class="pe-7"><input type="text" class="form-control form-control-solid" placeholder="Item Description" name="item_des[]"> <textarea class="form-control form-control-solid" placeholder="Additional Details" name="additional_details[]"></textarea></td>
                                                                        <td class="ps-0">
                                                                            <input type="text" class="form-control form-control-solid price" placeholder="Price" name="price[]">
                                                                        </td>
                                                                        <td class="text-right qty"><input type="text" class="form-control form-control-solid quantity" placeholder="Quantity" name="quantity[]"></td>
                                                                        <td class="tpt-8 text-end text-nowrap"><span class="editable-amount"><span class="currency">$</span> <span class="amount">0.00</span></span></td>
                                                                        <input type="hidden" name="amount_item[]" class="amount_item">
                                                                    </tr>
                                                            {% endif %}


                                                            </tbody>
                                                        </table>
                                                    </div>
                                                    <button type="button" class="btn btn-dark additem">Add Item</button>
                                                </div>
                                                <div class="separator separator-dashed my-10"></div>
                                                <div class="invoice-detail-total">
                                                    <div class="row">
                                                        <div class="col-md-8">
                                                            <div class="form-group row invoice-created-by">
                                                                <label for="account_number" class="col-sm-3 col-form-label col-form-label-sm">Account #:</label>
                                                                <div class="col-sm-9">
                                                                    <input type="text" class="form-control form-control-solid" id="account_number" name="account_number" placeholder="Bank Account Number" value="{{ invoiceInfo[0].account_number }}">
                                                                </div>
                                                            </div>
                                                            <div class="form-group row invoice-created-by">
                                                                <label for="bank_name" class="col-sm-3 col-form-label col-form-label-sm">Bank Name:</label>
                                                                <div class="col-sm-9">
                                                                    <input type="text" class="form-control form-control-solid" id="bank_name" name="bank_name" placeholder="Insert Bank Name" value="{{ invoiceInfo[0].bank_name }}">
                                                                </div>
                                                            </div>
                                                            <div class="form-group row invoice-created-by">
                                                                <label for="swift_code" class="col-sm-3 col-form-label col-form-label-sm">SWIFT code:</label>
                                                                <div class="col-sm-9">
                                                                    <input type="text" class="form-control form-control-solid" id="swift_code" name="swift_code" placeholder="Insert Code" value="{{ invoiceInfo[0].swift_code }}">
                                                                </div>
                                                            </div>
                                                            <div class="form-group row invoice-created-by">
                                                                <label for="payment-method-country" class="col-sm-3 col-form-label col-form-label-sm">Country:</label>
                                                                <div class="col-sm-9">
                                                                    <select class="form-select form-select-solid" name="billing_country" id="billing_country">
                                                                        <option selected="">Choose Country</option>
                                                                        {% for country in countries %}
                                                                            <option value="{{ country.code }}" {% if invoiceInfo[0].billing_country == country.code %} selected{% endif %}>{{ country.name }}</option>
                                                                        {% endfor %}
                                                                    </select>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <div class="totals-row">
                                                                <div class="row">

                                                                    <div class="col-6"><h3>Subtotal</h3></div>

                                                                    <div class="col-6 text-end">
                                                                        <div class="subtotal-amount">
                                                                            <span class="currency">$</span><span class="amount" id="subtotal">{{ invoiceInfo[0].subtotal }}</span>
                                                                            <input type="hidden" name="subtotal" id="subtotal_input" value="{{ invoiceInfo[0].subtotal }}">

                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="row">

                                                                    <div class="col-6"><h3>Discount</h3></div>

                                                                    <div class="col-6 text-end">
                                                                        <div class="total-amount">
                                                                            <span class="currency">$</span><span id="discountTotalAmount">{{ invoiceInfo[0].discount_amount_total }}</span>
                                                                            <input type="hidden" name="discount_amount_total" id="discountTotalAmountInput" value="{{ invoiceInfo[0].discount_amount_total }}">
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="separator separator-dashed my-10"></div>
                                                                <div class="row">
                                                                    <div class="col-6"><h3>Total</h3></div>
                                                                    <div class="col-6 text-end">
                                                                        <div class="balance-due-amount">
                                                                            <span class="currency">$</span><span id="finalTotal">{{ invoiceInfo[0].final_total }}</span>
                                                                            <input type="hidden" class="form-control form-control-solid" name="final_total" id="final_total" value="{{ invoiceInfo[0].final_total }}">
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                    </div>

                                                </div>
                                                <div class="separator separator-dashed my-10"></div>
                                                <div class="invoice-detail-note">
                                                    <div class="row">
                                                        <div class="col-md-12 align-self-center">
                                                            <div class="form-group row invoice-note">
                                                                <label for="invoice-detail-notes" class="col-sm-12 col-form-label col-form-label-sm">Notes:</label>
                                                                <div class="col-sm-12">
                                                                    <textarea class="form-control form-control-solid" id="invoice-detail-notes" placeholder='Notes - For example, "Thank you for doing business with us"' name="invoice_detail_notes" style="height: 88px;">{{ invoiceInfo[0].invoice_detail_notes }}</textarea>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xl-3">
                                        <div class="card p-12">
                                        <div class="invoice-actions">
                                            <div class="invoice-action-currency">
                                                <div class="form-group mb-0 p-2">
                                                    <label for="currency">Currency</label>
                                                    <select class="form-select form-select-solid" name="currency" id="currency">
                                                        <option selected="" value="usd">US Dollar</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="invoice-action-discount">
                                                <h5>Discount</h5>
                                                <div class="invoice-action-discount-fields">
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <div class="form-group mb-0">
                                                                <label for="discount">Type</label>
                                                                <select class="form-select form-select-solid" name="discount_type" id="discount" onchange="applyDiscount()">
                                                                    <option value="Percent" {% if invoiceInfo[0].discount_type == 'Percent' %} selected{% endif %}>Percent</option>
                                                                    <option value="Flat Amount" {% if invoiceInfo[0].discount_type == 'Flat Amount' %} selected{% endif %}>Flat Amount</option>
                                                                    <option value="None" {% if invoiceInfo[0].discount_type == 'None' %} selected{% endif %}>None</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="col-6 discount-amount" {% if invoiceInfo[0].discount_type != 'None' %} style="display: block" {% endif %}>
                                                            <div class="form-group mb-0">
                                                                <label for="rated1">Amount</label>
                                                                <input type="number" class="form-control form-control-solid input-rate" id="rated1" name="discount_amount" placeholder="Rate" min="0" value="{{ invoiceInfo[0].discount_amount }}" oninput="applyDiscount()">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="invoice-actions-btn">

                                            <div class="invoice-action-btn">

                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <a href="/user/invoice/view/{{ invoiceInfo[0].id }}" class="btn btn-secondary btn-preview w-100" style="margin-bottom: 20px;">Preview</a>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <button class="btn btn-success btn-download w-100" type="button" id="btn" onclick="update_invoice()" style="margin-bottom: 20px;">Update</button>
                                                    </div>
                                                    <div class=" col-md-12">
                                                        <a role="button"  data-bs-toggle="modal" data-bs-target="#inputFormModal" class="btn btn-primary w-100" >
                                                            <!--begin::Svg Icon | path: icons/duotune/general/gen016.svg-->
                                                            <span class="svg-icon svg-icon-3">
														<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
															<path d="M15.43 8.56949L10.744 15.1395C10.6422 15.282 10.5804 15.4492 10.5651 15.6236C10.5498 15.7981 10.5815 15.9734 10.657 16.1315L13.194 21.4425C13.2737 21.6097 13.3991 21.751 13.5557 21.8499C13.7123 21.9488 13.8938 22.0014 14.079 22.0015H14.117C14.3087 21.9941 14.4941 21.9307 14.6502 21.8191C14.8062 21.7075 14.9261 21.5526 14.995 21.3735L21.933 3.33649C22.0011 3.15918 22.0164 2.96594 21.977 2.78013C21.9376 2.59432 21.8452 2.4239 21.711 2.28949L15.43 8.56949Z" fill="currentColor"></path>
															<path opacity="0.3" d="M20.664 2.06648L2.62602 9.00148C2.44768 9.07085 2.29348 9.19082 2.1824 9.34663C2.07131 9.50244 2.00818 9.68731 2.00074 9.87853C1.99331 10.0697 2.04189 10.259 2.14054 10.4229C2.23919 10.5869 2.38359 10.7185 2.55601 10.8015L7.86601 13.3365C8.02383 13.4126 8.19925 13.4448 8.37382 13.4297C8.54839 13.4145 8.71565 13.3526 8.85801 13.2505L15.43 8.56548L21.711 2.28448C21.5762 2.15096 21.4055 2.05932 21.2198 2.02064C21.034 1.98196 20.8409 1.99788 20.664 2.06648Z" fill="currentColor"></path>
														</svg>
													</span>
                                                            <!--end::Svg Icon-->Send Invoice</a>
                                                    </div>

                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    </div>
                                </div>
                                <div class="modal fade inputForm-modal" id="inputFormModal" tabindex="-1" role="dialog" aria-labelledby="inputFormModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered modal-lg"  role="document">
                                        <div class="modal-content">
