    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://js.stripe.com/v3/"></script>
    <script>
        var stripe = Stripe('{{ Stripe_public_key }}');
        var elements = stripe.elements();
        var style = {
            base: {
                fontSize: '16px',
                color: '#32325d',
                fontFamily: '"Helvetica Neue", Helvetica, sans-serif',
                fontSmoothing: 'antialiased',
                '::placeholder': {
                    color: '#7e7e7e',
                },
            },
            invalid: {
                color: '#fa755a',
                iconColor: '#fa755a',
            },
        };
        var cardElement = elements.create('card', { style: style });
        cardElement.mount('#card-element');

        var form = document.getElementById('uploadForm');

        form.addEventListener('submit', function(event) {
            event.preventDefault();
            document.getElementById('btn').disabled = true;
            document.getElementById("btn").innerHTML = "Loading...";

            stripe.createToken(cardElement).then(function(result) {
                if (result.error) {
                    var errorElement = document.getElementById('card-errors');
                    errorElement.textContent = result.error.message;
                    document.getElementById('btn').disabled = false;
                    document.getElementById("btn").innerHTML = "Pay Invoice";
                } else {
                    stripe_tool(result.token.id);

                }
            });
        });
        function stripe_tool(stripeToken) {
            $("#btn").prop("disabled", true);
            var formData = new FormData(document.getElementById("uploadForm"));
            formData.append('stripeToken', stripeToken);
            $.ajax({
                url: "/stripe/pay-invoice",
                type: "POST",
                data: formData,
                contentType: false,
                cache: false,
                processData: false,
                success: function (data) {
                    data=JSON.parse(data);

                    // Re-enable the button
                    $("#btn").prop("disabled", false);
                    document.getElementById("btn").innerHTML = "Pay Invoice";
                    if (data['statusCode'] == '200') {
                        $('#table').DataTable().ajax.reload(null, false);
                        $('#kt_modal_1').modal('hide');
                        document.getElementById("uploadForm").reset();
                        $('#result').html('<div class="alert alert-success">'+data['message']+'</div>');
                        // window.location.href = "/contact-form";
                    } else {
                        document.getElementById("uploadForm").reset();
                        $('#card-errors').html('<div class="alert alert-danger">'+data['message']+'</div>');
                    }
                },
                error: function() {
                    // Re-enable the button in case of an error
                    $("#btn").prop("disabled", false);
                }
            });
        }

        function getDataForStripe(invoiceID){
             $('#invoiceID').val(invoiceID);
        }
    </script>

    <script>
        $(document).ready(function () {
            var csrf_token = $("input[name=csrf]").val();
            var table = $('#table').dataTable({
                "language": {
                    processing: '<i class="fa fa-spinner fa-spin fa-3x fa-fw"></i><span class="sr-only">Loading...</span> '
                },
                "responsive": true,
                "bProcessing": true,
                "sAjaxSource": "/user/api?page_name=view_invoices&csrf="+csrf_token,
                "bPaginate": true,
                "sPaginationType": "full_numbers",
                "iDisplayLength": 10,
                "aoColumns": [
                    {mData: 'ids'},
                    {mData: 'userView'},
                    {mData: 'statusView'},
                    {mData: 'FinalTotal'},
                    {mData: 'DueDate'},
                    {mData: 'action'},
                ]
            });
            $('#search').on('keyup', function() {
                $('#table').DataTable().search(this.value).draw();
            });
        });
        function userStatus(userID, status) {
            if(status == 0){
                var currStatus= "block";
            }else{
                var currStatus= "active";
            }
            var el = this;
            $(this).html('<i class="fa fa-circle-o-notch fa-spin"></i> loading...');
            var csrf_token = $("input[name=csrf]").val();
            $.ajax({
                url: '/user/api',
                type: 'GET', data: {
                    id: userID,
                    status: currStatus,
                    page_name: "userStatusUpdate",
                    table_name:"invoice",
                    status_table:"status",
                    csrf: csrf_token
                }, success: function (data) {
                    $(el).closest("tr").fadeOut();
                    if (data == 1) {
                        toastr.success('Status Updated.');
                        $(el).closest("tr").fadeOut();
                        $('#table').DataTable().ajax.reload(null, false);
                    } else {
                        toastr.error('Something went wrong.');

                    }
                }

            });
        }

        //Delete Data
        function deleteUser(deleteid) {
