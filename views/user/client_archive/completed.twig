{% extends 'user/master.twig' %}
{% block content %}

    <style>
        .nav.nav-pills {
            border: none;
            padding: 8px;
            background: #fff !important;
            border-radius: 8px;
        }
        .nav.nav-pills li.nav-item button.nav-link {
            color: #1b1b28 !important;
        }
        .nav.nav-pills li.nav-item button.nav-link svg{
            color: #1b1b28 !important;
        }.nav.nav-pills li.nav-item button.nav-link.active svg{
             color: #ED141F !important;
         }
    </style>
    <link href="{{ env.APP_URL }}assets/dashboard/tabs.css" rel="stylesheet" type="text/css" />

    <!--  BEGIN CONTENT AREA  -->
    <div class="content d-flex flex-column flex-column-fluid" id="kt_content">
        <!--begin::Toolbar-->
        <div class="toolbar" id="kt_toolbar">
            <!--begin::Container-->
            <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
                <!--begin::Page title-->
                <div data-kt-swapper="true" data-kt-swapper-mode="prepend" data-kt-swapper-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}" class="page-title d-flex align-items-center flex-wrap me-3 mb-5 mb-lg-0">
                    <!--begin::Title-->
                    <h1 class="d-flex text-dark fw-bolder fs-3 align-items-center my-1">Clients</h1>
                    <span class="h-20px border-gray-300 border-start mx-4"></span>
                    <ul class="breadcrumb breadcrumb-separatorless fw-bold fs-7 my-1">
                        <li class="breadcrumb-item text-muted">Client Archive</li>
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-300 w-5px h-2px"></span>
                        </li>
                        <li class="breadcrumb-item text-dark">Completed</li>
                        <!--end::Item-->
                    </ul>

                </div>

            </div>
        </div>
        <div class="post d-flex flex-column-fluid" id="kt_post">
            <div id="kt_content_container" class="container-fluid">
                <div id="call-ringing"></div>
                <div class="row layout-top-spacing">
                    <div class="row layout-spacing">
                                    <div class="col-xl-12 col-lg-12 col-sm-12  layout-spacing">
                                        <div class="widget-content widget-content-area card">
                                            <div class="card-header border-0 pt-6">
                                                <!--begin::Card title-->
                                                <div class="card-title">
                                                    <!--begin::Search-->
                                                    <div class="d-flex align-items-center position-relative my-1">
                                                        <!--begin::Svg Icon | path: icons/duotune/general/gen021.svg-->
                                                        <span class="svg-icon svg-icon-1 position-absolute ms-6">
													<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
														<rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="currentColor" />
														<path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="currentColor" />
													</svg>
												</span>
                                                        <!--end::Svg Icon-->
                                                        <input type="text" data-kt-customer-table-filter="search" id="searchCompleted" class="form-control form-control-solid w-250px ps-15" placeholder="Search " />
                                                    </div>
                                                    <!--end::Search-->
                                                </div>

                                            </div>
                                            <div class="card-body">

                                                <table id="completed"  class="table table-hover table-row-dashed fs-6 gy-5 my-0 dataTable no-footer" style="width:100%">
                                                    <thead>
                                                    <tr class="fw-bolder text-muted">
                                                        <th class="min-w-40px"> Id </th>
                                                        <th class="min-w-125px">Profile</th>
                                                        <th class="min-w-125px">Associate Profile</th>
                                                        <th class="min-w-125px">Mobile No.</th>
                                                        <th class="min-w-125px">Status</th>
                                                        <th class="min-w-125px">Action</th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    </tbody>
                                                </table>

                                            </div>
                                        </div>

                                    </div>
                                </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editExampleModal" tabindex="-1" aria-labelledby="editExampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered mw-650px">
            <div class="modal-content bg-white">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Update</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="btn-close"></button>
                </div>
                <div class="modal-body scroll-y mx-5 mx-xl-5 my-7">
                    <form  method="post" id="editUploadForm" enctype="multipart/form-data">
                        <div class="d-flex flex-column scroll-y me-n7 pe-7" id="kt_modal_add_user_scroll"
                             data-kt-scroll="true" data-kt-scroll-activate="{default: false, lg: true}"
                             data-kt-scroll-max-height="auto" data-kt-scroll-dependencies="#kt_modal_add_user_header"
                             data-kt-scroll-wrappers="#kt_modal_add_user_scroll" data-kt-scroll-offset="300px"
                             style="max-height: 570px;">
                            <div class="fv-row mb-7 fv-plugins-icon-container">
                                <label class="form-label">Associates</label>
                                <select class="form-control form-control-solid" aria-label="Associates" id="associates_update_id" name="associates_update_id">
                                    <option  disabled selected>Choose Associate</option>
                                    {% for memberInfos in memberInfoss %}
                                        <option value="{{ memberInfos.id }}">{{ memberInfos.fname }} {{ memberInfos.lname }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="fv-row mb-7 fv-plugins-icon-container">
                                <label class="form-label">First name</label>
                                <input type="text" class="form-control form-control-solid" id="fname" name="fname" placeholder="First Name">
                                <input type="hidden" name="csrf" value="{{ csrf}}">
                                <input type="hidden" name="id" id="id">
                            </div>
                            <div class="fv-row mb-7 fv-plugins-icon-container">
                                <label class="form-label">Last name</label>
                                <input type="text" class="form-control form-control-solid" id="lname" name="lname" placeholder="Last Name">
                            </div>
                            <div class="fv-row mb-7 fv-plugins-icon-container">
                                <label class="form-label">Email adress</label>
                                <input type="text" class="form-control form-control-solid" id="email" name="email" placeholder="Email" readonly>
                            </div>
                            <div class="fv-row mb-7 fv-plugins-icon-container">
                                <label class="form-label">Phone No</label>
                                <input type="tel" class="form-control form-control-solid" id="phone" name="phone" placeholder="Phone No">
                            </div>
                            <div class="fv-row mb-7 fv-plugins-icon-container">
                                <label class="form-label">Password</label>
                                <input type="password" class="form-control form-control-solid" id="password " name="password" placeholder="Password">
                            </div>
                            <div class="fv-row mb-7 fv-plugins-icon-container">
                                <label class="form-label">Confirm Password</label>
                                <input type="password" class="form-control form-control-solid" id="cpassword" name="cpassword" placeholder="Confirm Password">
                            </div>
                        </div>

                        <div class="modal-footer justify-content-center">
                            <button type="button"  class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" name="add_new" id="btn-profile" class="btn btn-primary" onclick="update_tool()">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!--  END CONTENT AREA  -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>

    <script>
        $(document).ready(function () {
            var csrf_token = $("input[name=csrf]").val();
            var table = $('#completed').dataTable({
                "language": {
                    processing: '<i class="fa fa-spinner fa-spin fa-3x fa-fw"></i><span class="sr-only">Loading...</span> '
                },
                "responsive": true,
                "bProcessing": true,
                "sAjaxSource": "/user/api?page_name=view_clients_completed&csrf="+csrf_token,
                "bPaginate": true,
                "sPaginationType": "full_numbers",
                "iDisplayLength": 10,
                "aoColumns": [
                    {mData: 'ids'},
                    {mData: 'userView'},
                    {mData: 'associateView'},
                    {mData: 'phone'},
                    {mData: 'statusView'},
                    {mData: 'action'},
                ]
            });
            $('#searchCompleted').on('keyup', function() {
                $('#completed').DataTable().search(this.value).draw();
            });
        });
        function send_invite() {
            var form_Data = new FormData(document.getElementById("inviteForm"));
            document.getElementById('btn-profile').disabled = true;

            $.ajax({
                url: "/user/send_invite",
                type: "POST",
                data: form_Data,
                contentType: false,
                cache: false,
                processData: false,
                success: function (dataResult) {
                    console.log(dataResult);
                    if (dataResult == 1) {
                        $('#completed').DataTable().ajax.reload(null, false);
                        document.getElementById('btn-profile').disabled = false;
                        $('#inputFormModal').modal('hide');
                        toastr.success('Invitation Sent.');
                        document.getElementById("inviteForm").reset();

                    } else if (dataResult == 2) {
                        document.getElementById('btn-profile').disabled = false;
                        toastr.error("Required fields are empty!");
                    } else if (dataResult == 3) {
                        document.getElementById('btn-profile').disabled = false;
                        toastr.error("Email Already Exist");
                    }else {
                        document.getElementById('btn-profile').disabled = false;
                        toastr.error('Somthing Went Wrong.');
                    }

                }
            });
        }
        function userStatus(userID, status) {
            if(status == 0){
                var currStatus= "completed";
            }else if (status == 1){
                var currStatus= "inprogress";
            }else if (status == 2){
                var currStatus= "assigned";
            }
            var el = this;
            $(this).html('<i class="fa fa-circle-o-notch fa-spin"></i> loading...');
            var csrf_token = $("input[name=csrf]").val();
            $.ajax({
                url: '/user/api',
                type: 'GET', data: {
                    id: userID,
                    status: currStatus,
                    page_name: "userStatusUpdate",
                    table_name:"users",
                    status_table:"work_status",
                    csrf: csrf_token
                }, success: function (data) {
                    if (data == 1) {
                        toastr.success('Status Updated.');
                        $('#completed').DataTable().ajax.reload(null, false);
                    } else {
                        toastr.error('Something went wrong.');

                    }
                }

            });
        }
        function deleteUser(deleteid) {
// add spinner to button
            $(this).html('<i class="fa fa-circle-o-notch fa-spin"></i> loading...');
            var csrf_token = $("input[name=csrf]").val();
            $.ajax({
                url: '/user/api',
                type: 'GET', data: {
                    id: deleteid,
                    page_name: "delete",
                    table_name: "users",
                    csrf: csrf_token
                }, success: function (data) {
                    if (data == 1) {
                        toastr.info('Successfully deleted.');
                        $('#completed').DataTable().ajax.reload(null, false);
                    } else {
                        toastr.error('Something went wrong.');

                    }
                }
            });
        }
        $('body').on('click', '.edit', function () {
            var id = $(this).data('id');

            $('#editUploadForm').trigger("reset");

            $.ajax({
                url: "/user/get_user",
                type: "POST",
                data: {
                    edit: 1,
                    id: id,
                },
                cache: false,
                success: function (dataResult) {

                    var dataResult = JSON.parse(dataResult);
                    console.log(dataResult);
                    $('#fname').val(dataResult[0].fname);
                    $('#lname').val(dataResult[0].lname);
                    $('#email').val(dataResult[0].email);
                    $('#phone').val(dataResult[0].phone);
                    $('input[name=id]').val(dataResult[0].id);


                }
            });
        });
        //Update  Data
        function update_tool() {
            var form_Data = new FormData(document.getElementById("editUploadForm"));

            $.ajax({
                url: "/user/user_edit",
                type: "POST",
                data: form_Data,
                contentType: false,
                cache: false,
                processData: false,
                success: function (dataResult) {
                    console.log(dataResult);

                    $("#btn-profile").removeAttr("disabled");
                    if (dataResult == 1) {
                        $('#completed').DataTable().ajax.reload(null, false);
                        $("#btn-profile").removeAttr("enabled");
                        $('#editExampleModal').modal('hide');
                        toastr.success('Client Updated Successfully.');
                        document.getElementById("editUploadForm").reset();

                    } else if (dataResult == 2) {
                        toastr.error("Password doesn't Matched.");
                    } else if (dataResult == 3) {
                        toastr.error("Required fields are empty!");
                    } else {
                        toastr.error('Somthing Went Wrong.');
                    }

                }
            });
        }
        function openAction4(userId) {
            var actionButton = document.querySelector('button[onclick="openAction4(' + userId + ')"]');
            actionButton.classList.toggle('show');
            var actionMenu = document.getElementById('menu4-' + userId);
            actionMenu.classList.toggle('show');
        }
    </script>
{% endblock %}