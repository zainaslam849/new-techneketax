{% extends 'user/master.twig' %}
{% block content %}
<style>
    .hidden{
        display: none;
    }
</style>


    <div class="content d-flex flex-column flex-column-fluid actual-content" id="kt_content">
        <!--begin::Toolbar-->
        <div class="toolbar" id="kt_toolbar">
            <!--begin::Container-->
            <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
                <!--begin::Page title-->
                <div data-kt-swapper="true" data-kt-swapper-mode="prepend" data-kt-swapper-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}" class="page-title d-flex align-items-center flex-wrap me-3 mb-5 mb-lg-0">
                    <!--begin::Title-->
                    <h1 class="d-flex text-dark fw-bolder fs-3 align-items-center my-1">Plans</h1>
                    <!--end::Title-->
                    <!--begin::Separator-->
                    <span class="h-20px border-gray-300 border-start mx-4"></span>
                    <!--end::Separator-->
                    <!--begin::Breadcrumb-->
                    <ul class="breadcrumb breadcrumb-separatorless fw-bold fs-7 my-1">
                        <!--begin::Item-->
                        <li class="breadcrumb-item text-muted">
                            <a href="/" class="text-muted text-hover-primary">Home</a>
                        </li>
                        <!--end::Item-->
                        <!--begin::Item-->
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-300 w-5px h-2px"></span>
                        </li>
                        <!--end::Item-->
                        <!--begin::Item-->
                        <li class="breadcrumb-item text-muted">Plans</li>
                        <!--end::Item-->
                    </ul>
                    <!--end::Breadcrumb-->
                </div>
            </div>
            <!--end::Container-->
        </div>
        <!--end::Toolbar-->
        <!--begin::Post-->
        <div class="post d-flex flex-column-fluid" id="kt_post">
            <!--begin::Container-->
            <div id="kt_content_container" class="container-fluid">
                <!--begin::Pricing card-->
                <div class="card" id="kt_pricing">
                    <!--begin::Card body-->
                    <div class="card-body p-lg-17">
                        <!--begin::Plans-->
                        <div class="d-flex flex-column">
                            <!--begin::Heading-->
                            <div class="mb-13 text-center">
                                <h1 class="fs-2hx fw-bolder mb-5">Choose Your Plan</h1>
                                <div class="text-gray-400 fw-bold fs-5">If you need more info about our pricing, please check
                                    <a href="#" class="link-primary fw-bolder">Pricing Guidelines</a>.</div>
                            </div>
                            <!--end::Heading-->
                            <!--begin::Nav group-->
                            <div class="nav-group nav-group-outline mx-auto mb-15" data-kt-buttons="true">
                                <button class="btn btn-color-gray-400 btn-active btn-active-secondary px-6 py-3 me-2 active" data-kt-plan="month">Monthly</button>
                                <button class="btn btn-color-gray-400 btn-active btn-active-secondary px-6 py-3" data-kt-plan="annual">Annual</button>
                                <input type="hidden" id="selected-plan-type" value="month">
                            </div>
                            <div class="row g-10">
                                {% for plan in plans %}
                                    <div class="col-xl-4">
                                        <div class="d-flex h-100 ">
                                            <div class="w-100 d-flex flex-column  rounded-3 bg-light bg-opacity-75 py-15 px-10">
                                                <div class="mb-7 text-center">
                                                    <h1 class="text-dark mb-5 fw-boldest">
                                                        {{ plan.name }}
                                                        {% if plan.percentage != "0" and plan.percentage != "" %}
                                                            <div class="badge badge-pill badge-success show text-white" style="display: ruby-text">
                                                                {{ plan.percentage }}% Off
                                                            </div>
                                                        {% endif %}
                                                    </h1>
                                                    <div class="text-gray-400 fw-bold mb-5">
                                                        {% set tags = plan.tags|split(',') %}
                                                        {% for tag in tags %}
                                                            {% if tag %}
                                                                <span class="badge badge-pill badge-primary show text-white">{{ tag }}</span>
                                                            {% endif %}
                                                        {% endfor %}
                                                    </div>
                                                    <div class="text-center">
                                                        <span class="mb-2 text-primary">$</span>
                                                        <span class="fs-3x fw-bolder text-primary" data-kt-plan-price-month="{{ plan.monthly_price }}" data-kt-plan-price-annual="{{ plan.yearly_price }}">
                            {{ plan.monthly_price }}
                        </span>
                                                        <span class="fs-7 fw-bold opacity-50">/ <span data-kt-element="period">Mon</span></span>
                                                    </div>
                                                </div>
                                                <div class="w-100 mb-10">
                                                    <div class="d-flex flex-column scroll-y me-n7 pe-7" id="kt_modal_add_user_scroll"
                                                         data-kt-scroll="true" data-kt-scroll-activate="{default: false, lg: true}"
                                                         data-kt-scroll-max-height="auto" data-kt-scroll-dependencies="#kt_modal_add_user_header"
                                                         data-kt-scroll-wrappers="#kt_modal_add_user_scroll" data-kt-scroll-offset="300px"
                                                         style="max-height: 570px;">
                                                    {% for key_point in plan.key_points_titles %}
                                                        <div class="fv-row fv-plugins-icon-container">
                                                        <div class="d-flex align-items-center mb-5">
                                                            <span class="fw-bold fs-6 text-gray-800 flex-grow-1 pe-3">{{ key_point }}</span>
                                                            <span class="svg-icon svg-icon-1 svg-icon-success">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                    <rect opacity="0.3" x="2" y="2" width="20" height="20" rx="10" fill="currentColor" />
                                    <path d="M10.4343 12.4343L8.75 10.75C8.33579 10.3358 7.66421 10.3358 7.25 10.75C6.83579 11.1642 6.83579 11.8358 7.25 12.25L10.2929 15.2929C10.6834 15.6834 11.3166 15.6834 11.7071 15.2929L17.25 9.75C17.6642 9.33579 17.6642 8.66421 17.25 8.25C16.8358 7.83579 16.1642 7.83579 15.75 8.25L11.5657 12.4343C11.2533 12.7467 10.7467 12.7467 10.4343 12.4343Z" fill="currentColor" />
                                </svg>
                            </span>
                                                        </div>
                                                        </div>
                                                    {% endfor %}

                                                </div>
                                                </div>
                                                {% if planId ==  plan.id and CurrentDate <= planEndDate %}
                                                <a role="button" class="btn btn-sm btn-success" disabled="">Active Till {{ formattedDate }}</a>
                                                {% elseif planId != '' and CurrentDate <= planEndDate %}
                                                    <a role="button" class="btn btn-sm btn-secondary" disabled="">Select</a>
                                                {% else %}
                                                    <a role="button" class="btn btn-sm btn-primary" onclick="redirectToDetailPage('{{ plan.slug }}')">Select</a>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                            <!--end::Row-->
                        </div>
                        <!--end::Plans-->
                    </div>
                    <!--end::Card body-->
                </div>
                <!--end::Pricing card-->
            </div>
            <!--end::Container-->
        </div>
        <!--end::Post-->
    </div>
    <script>


        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('[data-kt-plan]').forEach(function (btn) {
                btn.addEventListener('click', function () {
                    const selectedPlan = this.getAttribute('data-kt-plan');
                    document.getElementById('selected-plan-type').value = selectedPlan;
                });
            });
        });
        function redirectToDetailPage(slug) {
            var type =   $('#selected-plan-type').val();

            $(this).html('<i class="fa fa-circle-o-notch fa-spin"></i> loading...');
            var csrf_token = $("input[name=csrf]").val();
            $.ajax({
                url: '/user/plan/get_plan',
                type: 'POST',
                data: {
                    slug: slug,
                    type: type,
                    csrf: csrf_token
                }, success: function (data) {
                    data= JSON.parse(data);
                    if (data['statusCode'] == "1") {
                        window.location.href = '/user/plans_details/'+data['slug'];
                    } else {
                        toastr.error('Something went wrong.');

                    }
                }

            });
        }
    </script>

{% endblock %}