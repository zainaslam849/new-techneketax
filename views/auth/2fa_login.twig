<script>
    $(document).ready(function() {
        document.getElementById("cover-spin").classList.add('hide');
    });
    function do_2fa(){
        document.getElementById("btn").innerHTML = "Loading";
        document.getElementById("btn").disabled = true;
        var email=$("#email").val();
        var pass=$("#password").val();
        var twofa=$("#twofa").val();
        var csrf_token=$("input[name=csrf]").val();
        if(email!="" && pass!=""){
            $("#loader").css({"display":"block"});
            $.ajax
            ({
                type:'post',
                url:'/2fa/login',
                data:{
                    do_2fa:"do_2fa",
                    email:email,
                    password:pass,
                    twofa:twofa,
                    csrf:csrf_token,
                },
                success:function(response) {
                    response=$.parseJSON(response);
                    console.log(response);
                    document.getElementById("btn").disabled = false;
                    document.getElementById("btn").innerHTML = "Enter your Authentication Code";
                    if(response['statusCode']=="200"){
                            window.location.href=response['path'];
                        document.getElementById("btn").removeAttribute("disabled");
                    }else{
                        notie.alert({type: 'error', text: response.message, time: 2});
                        document.getElementById("btn").removeAttribute("disabled");
                    }
                }
            });
        } else{
            document.getElementById("btn").removeAttribute("disabled");
            notie.alert({type: 'error', text: "Missing Required Input", time: 2});
        }
        return false;
    }
</script>
